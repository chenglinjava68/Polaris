<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN" "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<!-- Configuration file for UrlRewriteFilter http://www.tuckey.org/urlrewrite/ -->
<urlrewrite>

    <!-- 默认使用 Java 正则表达式 -->
    <rule match-type="regex">
        <note>内容页</note>
        <from>^/article/article_([1-9]\d*|0$).html</from>
        <to>/intro/Intro/$1</to>
    </rule>
    <rule match-type="regex">
        <note>新闻详细页</note>
        <from>^/news/detail/([1-9]\d*|0$).html</from>
        <to>/news/getNewsDetail?newsId=$1</to>
    </rule>
    <rule match-type="regex">
        <note>栏目页</note>
        <from>^/content/(\w+)/</from>
        <to>/intro/content/$1</to>
    </rule>
    <rule match-type="regex">
        <note>业务联系</note>
        <from>^/ywlx/(\w+)_(\w+)_(\w+).html$</from>
        <to>/serviceconn/serviceConn?t=$1&amp;r=$2&amp;c=$3</to>
    </rule>
    <rule match-type="regex">
        <note>新闻页</note>
        <from>^/news/(\w+)/</from>
        <to>/news/getNewsIndex?shortName=$1</to>
    </rule>
</urlrewrite>